public class FirstLastDigitSum {
    public static int  sumFirstAndLastDigit(int number){
        int sum=0;
        if(number<0){
            sum=-1;
        }
        else{
            int ld=number%10;
            int n= number;
            while(n>=10){
                n=n/10;
            } 
            int fd=n;
            sum=ld+fd;
            
        } return sum;
    }
}
